<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailPage">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_manga"
            android:layout_width="190dp"
            android:layout_height="240dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="20dp"
            android:scaleType="centerInside"/>
        
        <TextView
            android:id="@+id/text_manga"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/img_manga"
            android:textSize="30sp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/text_mangaka"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/img_manga"
            android:layout_marginBottom="15dp"
            android:layout_below="@id/text_manga"
            android:textSize="24sp"
            android:layout_marginTop="10dp"
            android:textColor="@android:color/darker_gray"/>


        <TextView
            android:id="@+id/text_genre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/img_manga"
            android:layout_below="@id/text_mangaka"
            android:textSize="10pt"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"/>

        <Button
            android:id="@+id/bookmark"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_manga"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="@string/bookmark"/>

        <Button
            android:id="@+id/read"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_manga"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@id/bookmark"
            android:text="@string/read"/>

        <TextView
            android:id="@+id/text_synopsis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/read"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"/>

    </RelativeLayout>
</ScrollView>